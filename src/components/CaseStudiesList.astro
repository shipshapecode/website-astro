---
import { Icon } from 'astro-icon';

const caseStudies = [
  {
    altText: 'Enigma logo',
    bgColor: 'enigma-blue',
    blurb:
      'Built MVP application that was successfully launched and established for immediate use among initial client base',
    imgAlt:
      'Enigma hirer dashboard with a pop-up notification introducing the page',
    imgSrc: '/img/work/enigma/enigma-hirer-dashboard.png',
    link: '/work/enigma/',
    logoSrc: 'clients/enigma'
  },
  {
    altText: 'Netflix logo',
    bgColor: 'netflix-red',
    blurb:
      'Increased efficiency and data granularity with enhanced finance tools',
    imgAlt: '',
    imgSrc: '/svgs/data-graphic.svg',
    link: '/work/netflix/',
    logoSrc: 'clients/netflix'
  },
  {
    altText: 'Expel logo',
    bgColor: 'pink',
    blurb:
      'Centralized NIST score tracking and improved performance with a modernized app',
    imgAlt:
      'An overview of NIST scores, broken down by category and visualized in a radar graph.',
    imgSrc: '/img/work/expel/nist-overview.png',
    link: '/work/expel/',
    logoSrc: 'clients/expel'
  },
  {
    altText: 'Swach logo',
    bgColor: 'swach-purple',
    blurb: 'Building a cross platform desktop color management tool',
    imgAlt: 'Swach filled with selected colors and palettes.',
    imgSrc: '/img/work/swach/palette-dark.png',
    link: '/work/swach/',
    logoSrc: 'clients/swach'
  },
  {
    altText: 'Jebbit logo',
    bgColor: 'jebbit-green',
    blurb:
      'Improved the user experience to support all customers and close a major new client',
    imgAlt: 'Jebbit Experience Builder Legacy',
    imgSrc: '/img/work/jebbit/jebbit-case-study-screenshot.png',
    link: '/work/jebbit/',
    logoSrc: 'clients/jebbit'
  },
  {
    altText: 'Acquia logo',
    bgColor: 'acquia-blue',
    blurb:
      'Raised renewal rates to nearly 100% by updating the user experience and fixing data issues',
    imgAlt: 'Acquia builder showing selecting content to build a screen',
    imgSrc: '/img/work/acquia/builder_index_5.jpg',
    link: '/work/acquia/',
    logoSrc: 'clients/acquia'
  }
];
---

<div class="gap-5 grid grid-cols-1 mb-32 lg:grid-cols-2">
  {
    caseStudies.map((study, index) => (
      <a
        class="group transition-all hover:-translate-y-2 focus:-translate-y-2"
        data-aos="flip-down"
        data-aos-delay={100 * index}
        href={study.link}
      >
        <div class="bg-white p-12 pb-0 rounded-md w-full">
          <h3>
            <Icon
              class={`h-8 max-w-full mb-8 self-start w-auto pointer-events-none ${
                study.logoSrc !== 'clients/swach' ? 'child:fill-navy' : ''
              }`}
              name={study.logoSrc}
            />
          </h3>

          <p class="my-12 !text-grey-light lg:h-12">{study.blurb}</p>

          <div class="mb-8 text-navy group-hover:text-red">
            Dive deeper
            <Icon
              class="duration-200 h-4 inline ml-1 transition-all w-6 group-focus:child:fill-red group-focus:translate-x-2 group-hover:child:fill-red group-hover:translate-x-2"
              name="arrow"
            />
          </div>

          <div class={`bg-${study.bgColor} rounded-t-md w-full`}>
            <div class="h-28 p-8 pb-0 rounded-t-md w-full sm:h-56">
              <img
                class="object-cover object-top h-full max-w-full rounded-t-md w-full"
                src={study.imgSrc}
                alt={study.imgAlt}
              />
            </div>
          </div>
        </div>
      </a>
    ))
  }
</div>
