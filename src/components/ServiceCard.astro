---
import { Icon } from 'astro-icon';

export interface Props {
  caseStudyLink: string;
  caseStudyLinkDescription: string;
  learnMoreLink: string;
  learnMoreLinkDescription: string;
}

const {
  caseStudyLink,
  caseStudyLinkDescription,
  learnMoreLink,
  learnMoreLinkDescription
} = Astro.props as Props;
---

<article
  class="bg-white flex flex-grow p-8 justify-center rounded-md lg:p-12 xl:h-104"
  itemscope
  itemtype="http://schema.org/Service"
>
  <div class="flex flex-col max-w-2xl w-full">
    <h3 class="mb-0" itemprop="name">
      <slot name="header" />
    </h3>
    <p class="flex-grow">
      <slot name="description" />
    </p>
    <div class="grid grid-cols-1 gap-y-2 mt-8 lg:grid-cols-2 lg:mt-12">
      <div
        class="flex justify-start lg:border-grey lg:border-r lg:justify-center"
      >
        <a
          class="learn-more"
          href={learnMoreLink}
          aria-label={learnMoreLinkDescription}
        >
          Learn more
          <Icon class="h-4 inline w-6" name="arrow" />
        </a>
      </div>
      <div class="flex justify-start lg:justify-center">
        <a
          class="learn-more"
          href={caseStudyLink}
          aria-label={caseStudyLinkDescription}
        >
          See it in action
          <Icon class="h-4 inline w-6" name="arrow" />
        </a>
      </div>
    </div>
  </div>
</article>
