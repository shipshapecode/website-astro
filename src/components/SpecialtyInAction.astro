---
import { Img } from 'astro-imagetools/components';

interface Props {
  caseStudies: CaseStudy[];
  specialty: string;
}

export interface CaseStudy {
  imgAlt: string;
  imgSrc: string;
  logoSrc: string;
  text: string;
  linkName: string;
}

const { specialty, caseStudies }: Props = Astro.props;
---

<section class="section flex flex-wrap justify-center" data-aos="fade-down">
  <div class="section-content">
    <h2 class="pb-8 text-4xl mb-6">{specialty} in action</h2>
    <div class={`gap-5 grid grid-cols-1 lg:grid-cols-${caseStudies.length}`}>
      {
        caseStudies.map((study) => (
          <article
            class="case-study-article"
            data-aos="flip-down"
            data-aos-delay="200 * index"
          >
            <a href={`/work/${study.linkName}/`}>
              <div
                class={`
                bg-blue-light
                flex
                h-full
                relative
                w-full
                transition-all
                hover:-translate-y-5
                flex-col rounded-b-md
                ${
                  caseStudies.length > 1
                    ? ''
                    : 'lg:flex-row-reverse lg:rounded-b-none lg:rounded-l-md'
                }
              `}
              >
                <div class="flex flex-col flex-grow p-8 relative order-last lg:p-12">
                  <h3>
                    <img
                      class="logo-navy h-8 max-w-full mb-8 self-start w-auto pointer-events-none"
                      src={study.logoSrc}
                      alt={`Logo for ${study.linkName}`}
                    />
                  </h3>
                  <p class="flex-grow mb-16 !text-navy">{study.text}</p>

                  <span class="dive-deeper">
                    Dive deeper
                    <img class="h-4 inline w-6" src="/svgs/arrow.svg" />
                  </span>
                </div>
                <div
                  class={`
                  bg-red 
                  flex 
                  items-end 
                  justify-center 
                  px-8 relative 
                  lg:pt-12 
                  lg:px-12
                  pt-12 rounded-t-md 
                  ${
                    caseStudies.length > 1
                      ? ''
                      : 'lg:rounded-t-none lg:rounded-r-md lg:w-5/12 xl:pt-24 xl:px-12'
                  }
                `}
                >
                  <div class="bg-white rounded-t-md w-full">
                    <Img
                      class="object-cover object-top h-full max-w-full rounded-t-md w-full"
                      src={study.imgSrc}
                      alt={study.imgAlt}
                    />
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style lang="scss">
  .case-study-article {
    .dive-deeper {
      @apply text-navy;

      svg {
        @apply duration-200 fill-navy ml-1 transition-all;
      }
    }

    &:hover {
      .dive-deeper {
        @apply cursor-pointer text-red;

        svg {
          @apply fill-red translate-x-2;
          > * {
            fill: var(--red);
          }
        }
      }
    }
  }
</style>
