</TwoColumnSection>

<section class="section flex justify-center !pt-12 lg:!pt-24">
  <div class="section-content">
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
      {
        services.map((service) => (
          <ServiceCard
            learnMoreLink={service.learnMoreLink}
            caseStudyLink={service.caseStudyLink}
            learnMoreLinkDescription={service.learnMoreLinkDescription}
            caseStudyLinkDescription={service.caseStudyLinkDescription}
          >
            <Fragment slot="header">
              <Icon
                class={`h-auto nested-svg pointer-events-none ${service.logoClasses}`}
                name={`technologies/${service.logoName}`}
                title={service.title}
              />
            </Fragment>
            <Fragment slot="description">{service.description}</Fragment>
          </ServiceCard>
        ))
      }
    </div>
  </div>
</section>

<style lang="scss" is:global>
