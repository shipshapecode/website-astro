---
import { Image } from 'astro:assets';
---

<div
  class="waves blue-waves section bg-blue-light flex flex-wrap justify-center"
>
  <div class="section-content">
    <section class="flex flex-wrap justify-center">
      <div class="gap-8 grid grid-cols-1 items-center lg:gap-48 lg:grid-cols-2">
        <div class="order-last lg:order-none">
          <h2 class="mb-8 text-4xl lg:text-5xl">
            <slot name="heading" />
          </h2>

          <div>
            <div>
              <p>
                <slot name="text" />
              </p>
              <div
                class="flex justify-center mt-3 w-full lg:justify-start lg:mt-8"
              >
                <a class="btn btn-red w-full lg:w-auto" href="/contact/">
                  Contact us
                </a>
              </div>
            </div>
          </div>
        </div>
        <div>
          <Image
            alt=""
            class="h-auto m-auto max-w-2xl w-full"
            format="webp"
            height={988}
            src="/img/hero-images/ember-consulting.png"
            width={1248}
          />
        </div>
      </div>
    </section>
  </div>
</div>
