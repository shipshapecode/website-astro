---
import { Img } from 'astro-imagetools/components';
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Whiskey, Web, & Whatnot: A Software Engineering Podcast';
const description =
  'Join Ship Shape CEO Robbie Wagner and COO Chuck Carpenter for this software engineering podcast for developers who love whiskey, web development, and whatnot.';
---

<BaseLayout description={description} title={title}>
  <div itemscope itemtype="http://schema.org/Service">
    <div class="flex flex-wrap justify-center relative">
      <div class="section-content mb-8 relative z-10">
        <div class="grid grid-cols-1 grid-flow-row lg:grid-cols-5">
          <div class="pb-8 pt-2 lg:col-span-3 lg:pl-24 lg:py-12">
            <Img
              attributes={{
                img: {
                  class: 'h-auto m-auto !max-w-md my-4 rounded-lg w-full'
                }
              }}
              format="webp"
              height={1344}
              src="/img/hero-images/www.png"
              width={1344}
              alt="Whiskey, Web, and Whatnot podcast logo"
            />
          </div>

          <div class="flex flex-col justify-center lg:col-span-2">
            <h1 itemprop="name" class="font-bold text-4xl mb-6">
              Whiskey, Web, and Whatnot: a 5-star software engineering podcast
              with “spirit”
            </h1>

            <p class="mb-6">
              Pour a drink, and join Ship Shape CEO Robbie Wagner and COO Chuck
              Carpenter for a podcast for developers who love whiskey, web
              development, and a wide range of whatnot.
            </p>

            <div class="flex flex-wrap">
              <a href="https://open.spotify.com/show/19jiuHAqzeKnkleQUpZxDf">
                <img
                  alt="Button to view Whiskey Web and Whatnot on Spotify"
                  class="h-12 mb-3 mr-3 w-auto"
                  src="/svgs/spotify-podcasts.svg"
                />
              </a>
              <a
                href="https://podcasts.apple.com/us/podcast/whiskey-web-and-whatnot/id1552776603?uo=4"
              >
                <img
                  alt="Button to view Whiskey Web and Whatnot on Apple Podcasts"
                  class="h-12 w-auto"
                  src="/svgs/apple-podcasts.svg"
                />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
